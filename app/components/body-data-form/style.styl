@import '../../colors/colors.styl'

.body-data-form
	text-align: center
	color: --orange0
	display: flex
	flex-wrap: wrap

	.slide-input

		.am-button
			width: 20px
			margin: 10px

	label
		position relative
		width: 80px
		height: 80px
		border: 5px solid transparent
		border-radius: 50%
		display: flex
		justify-content: center
		flex-direction: column
		align-items: center
		background: --orange3

		font-weight: 600
		font-size: 1.2rem
		text-align: center

	&__form-item
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
		width: 50%

		&-circle
			height: 90px
			width: 90px
			border: 5px solid transparent
			border-radius: 50%
			background: linear-gradient(45deg, --orange2, --orange1)

	&__date-title
		margin-top: 0
		margin-bottom: 10px
		color: --orange3
		width: 100%


	&__submit-btn
		width: 100%
